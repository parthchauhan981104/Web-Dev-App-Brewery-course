<%- include("partials/header") -%>

    <div id = "heading" class="box">
      <h1>Home</h1>
    </div>
    <div class="">
      <p><%=homecont %></p>
      <br>
      <h4>
        <a href="/compose">Compose Post</a>
      </h4>
      <br>
      <h1>Posts</h1>

      <% allposts.forEach(function(post) { %>
        <div class="post">
          <h3><%= post.title%></h3>
          <%if (post.title !== "No posts yet..."){%>
            <p><%= post.content.substring(0,100) + ' ...'%>
              <a href="/posts/<%= post.title%>">Read More</a>
            </p>
          <%}%>

        </div>
      <%  }); %>

    </div>


<%- include("partials/footer") -%>
